{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FilezResource",
  "description": "Custom kubernetes resource for applying Filez resources such as storage locations and filez apps.",
  "type": "object",
  "required": [
    "spec"
  ],
  "properties": {
    "spec": {
      "$ref": "#/definitions/FilezResourceSpec"
    },
    "status": {
      "anyOf": [
        {
          "$ref": "#/definitions/FilezResourceStatus"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "definitions": {
    "AppType": {
      "type": "string",
      "enum": [
        "frontend",
        "backend"
      ]
    },
    "DefaultQuota": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "defaultUserQuota"
          ],
          "properties": {
            "defaultUserQuota": {
              "$ref": "#/definitions/DefaultUserQuota"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "DefaultUserQuota": {
      "description": "A default quota that gets applied to all users for a storage location.",
      "type": "object",
      "required": [
        "maxSizeBytes",
        "name"
      ],
      "properties": {
        "maxSizeBytes": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "name": {
          "type": "string"
        }
      }
    },
    "FilezResourceSpec": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "storageLocation"
          ],
          "properties": {
            "storageLocation": {
              "$ref": "#/definitions/StorageLocationConfigCrd"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "mowsApp"
          ],
          "properties": {
            "mowsApp": {
              "$ref": "#/definitions/MowsAppConfig"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "FilezResourceStatus": {
      "type": "object",
      "required": [
        "created"
      ],
      "properties": {
        "created": {
          "type": "boolean"
        }
      }
    },
    "MowsAppConfig": {
      "type": "object",
      "required": [
        "appType",
        "trusted"
      ],
      "properties": {
        "appType": {
          "$ref": "#/definitions/AppType"
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "origins": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "trusted": {
          "type": "boolean"
        }
      }
    },
    "StorageLocationConfigCrd": {
      "type": "object",
      "required": [
        "defaultQuotas",
        "providerConfig"
      ],
      "properties": {
        "defaultQuotas": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/DefaultQuota"
          }
        },
        "providerConfig": {
          "$ref": "#/definitions/StorageProviderConfigCrd"
        }
      }
    },
    "StorageProviderConfigCrd": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "Minio"
          ],
          "properties": {
            "Minio": {
              "$ref": "#/definitions/StorageProviderConfigMinioCrd"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "Filesystem"
          ],
          "properties": {
            "Filesystem": {
              "$ref": "#/definitions/StorageProviderConfigFileSystemCrd"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "StorageProviderConfigFileSystemCrd": {
      "type": "object",
      "required": [
        "rootPath"
      ],
      "properties": {
        "rootPath": {
          "$ref": "#/definitions/ValueOrSecretReference"
        }
      }
    },
    "StorageProviderConfigMinioCrd": {
      "type": "object",
      "required": [
        "bucket",
        "endpoint",
        "password",
        "username"
      ],
      "properties": {
        "bucket": {
          "$ref": "#/definitions/ValueOrSecretReference"
        },
        "endpoint": {
          "$ref": "#/definitions/ValueOrSecretReference"
        },
        "password": {
          "$ref": "#/definitions/ValueOrSecretReference"
        },
        "username": {
          "$ref": "#/definitions/ValueOrSecretReference"
        }
      }
    },
    "ValueOrSecretReference": {
      "description": "When a secret is referenced, it references the data field of the kubernetes secret in the same namespace as the filez resource with the name `secret-readable-by-filez-controller`",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "value"
          ],
          "properties": {
            "value": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "secret"
          ],
          "properties": {
            "secret": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}